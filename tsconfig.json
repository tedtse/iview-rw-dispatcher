{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "lib": [
      "dom",
      "es2015",
      "es2016",
      "es2017"
    ]
  },
  "include": [
    "*.ts",
    "types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
